{
  "semi": true,
  "trailingComma": "all",
  "printWidth": 125,
  "proseWrap": "never",
  "tabWidth": 2,
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.js",
        "*.tsx",
        "*.jsx"
      ],
      "options": {
        "trailingComma": "all"
      },
      "parser": "babel-ts"
    }
  ],
  "arrowParens": "always",
  "singleQuote": false
}
